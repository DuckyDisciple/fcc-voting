-var name = displayName ? displayName + "'s" : "Your"
-var heading = name + " Polls"
doctype html
html
    head
        title My Polls
        link(rel="stylesheet" href="/client/css/main.css" type="text/css")
    header
        div.logo
            img.logo-icon(src="/client/img/SirVeyLogo.png")
        div.signed-in.hide
            p Welcome, #[span#profile-display]!
            a.menu(href="/edit") New Poll 
            p |
            a.menu(href="/polls") My Polls
            p |
            a.menu(href="/logout") Logout
        div.not-signed-in
            a.login(href="/login")
                button.login-button LOGIN
    body
        div.container
            h1.heading= heading
            div.poll-list
                if(polls.length>0)
                    each val in polls
                        div.poll-item
                            p.poll-link= val.name
                            .poll-configs
                                a.poll-config(href="/vote/"+val.id) View
                                p.divider |
                                a.poll-config(href="/results/"+val.id) Results
                                p.divider |
                                a.poll-config(href="/edit/"+val.id) Edit 
                                p.divider |
                                a.poll-config(href="/delete/"+val.id) Delete
                else
                    p.no-polls You haven't created any polls yet
        script(type="text/javascript" src="/common/ajax-functions.js")
        script(type="text/javascript" src="/controllers/userController.client.js")